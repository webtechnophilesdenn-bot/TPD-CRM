{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "trim": true
        },
        "number": {
            "type": "autoincrement",
            "index": true
        },
        "status": {
            "type": "enum",
            "options": ["New", "In Progress", "On Hold", "Resolved", "Closed"],
            "default": "New",
            "index": true
        },
        "priority": {
            "type": "enum",
            "options": ["Low", "Medium", "High", "Urgent"],
            "default": "Medium",
            "index": true
        },
        "description": {
            "type": "text"
        },
        "assignedUser": {
            "type": "link"
        },
        "teams": {
            "type": "linkMultiple"
        },
        "contact": {
            "type": "link"
        },
        "createdAt": {
            "type": "datetime"
        },
        "modifiedAt": {
            "type": "datetime"
        },
        "createdBy": {
            "type": "link"
        },
        "modifiedBy": {
            "type": "link"
        }
    },
    "links": {
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam"
        },
        "contact": {
            "type": "belongsTo",
            "entity": "Contact",
            "foreign": "tickets"
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        }
    }
}