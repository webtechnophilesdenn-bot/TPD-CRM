{
    "json.schemas": [
        {
            "fileMatch": [
                "*/Resources/autoload.json"
            ],
            "url": "./schema/autoload.json"
        },
        {
            "fileMatch": [
                "*/Resources/routes.json"
            ],
            "url": "./schema/routes.json"
        },
        {
            "fileMatch": [
                "*/Resources/module.json"
            ],
            "url": "./schema/module.json"
        },
        {
            "fileMatch": [
                "*/Resources/layouts/*/detail.json",
                "*/Resources/layouts/*/detailSmall.json",
                "*/Resources/layouts/*/detailConvert.json"
            ],
            "schema": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["detail"]
                    },
                    "blocks": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "label": {
                                    "type": "string"
                                },
                                "rows": {
                                    "type": "array",
                                    "items": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "name": {
                                                    "type": "string"
                                                },
                                                "link": {
                                                    "type": "boolean"
                                                }
                                            },
                                            "required": ["name"]
                                        }
                                    }
                                }
                            },
                            "required": ["label", "rows"]
                        }
                    },
                    "sidePanels": {
                        "type": "object",
                        "properties": {
                            "detail": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "label": {
                                            "type": "string"
                                        },
                                        "view": {
                                            "type": "string"
                                        },
                                        "aclScope": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "required": ["type", "blocks"]
            }
        },
        {
            "fileMatch": [
                "*/Resources/layouts/*/list.json",
                "*/Resources/layouts/*/listSmall.json",
                "*/Resources/layouts/*/listFor*.json"
            ],
            "schema": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["list"]
                    },
                    "rows": {
                        "type": "array",
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "link": {
                                        "type": "boolean"
                                    },
                                    "width": {
                                        "type": "string"
                                    },
                                    "notSortable": {
                                        "type": "boolean"
                                    }
                                },
                                "required": ["name"]
                            }
                        }
                    }
                },
                "required": ["type", "rows"]
            }
        },
        {
            "fileMatch": [
                "*/metadata/aclDefs/*.json"
            ],
            "schema": {
                "type": "object"
            }
        },
        {
            "fileMatch": [
                "*/metadata/authenticationMethods/*.json"
            ],
            "schema": {
                "type": "object"
            }
        },
        {
            "fileMatch": [
                "*/metadata/clientDefs/*.json"
            ],
            "schema": {
                "type": "object",
                "properties": {
                    "controller": {
                        "type": "string"
                    },
                    "iconClass": {
                        "type": "string"
                    },
                    "color": {
                        "type": "string"
                    },
                    "kanbanViewMode": {
                        "type": "boolean"
                    },
                    "listViewModeList": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "filterList": {
                        "type": "array"
                    },
                    "boolFilterList": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "sidePanels": {
                        "type": "object"
                    },
                    "relationshipPanels": {
                        "type": "object"
                    }
                }
            }
        },
        {
            "fileMatch": [
                "*/metadata/dashlets/*.json"
            ],
            "schema": {
                "type": "object"
            }
        },
        {
            "fileMatch": [
                "*/metadata/entityAcl/*.json"
            ],
            "schema": {
                "type": "object"
            }
        },
        {
            "fileMatch": [
                "*/metadata/entityDefs/*.json"
            ],
            "schema": {
                "type": "object",
                "properties": {
                    "fields": {
                        "type": "object"
                    },
                    "links": {
                        "type": "object"
                    },
                    "collection": {
                        "type": "object",
                        "properties": {
                            "orderBy": {
                                "type": "string"
                            },
                            "order": {
                                "type": "string",
                                "enum": ["asc", "desc"]
                            }
                        }
                    },
                    "indexes": {
                        "type": "object"
                    }
                }
            }
        },
        {
            "fileMatch": [
                "*/metadata/fields/*.json"
            ],
            "schema": {
                "type": "object"
            }
        },
        {
            "fileMatch": [
                "*/metadata/integrations/*.json"
            ],
            "schema": {
                "type": "object"
            }
        },
        {
            "fileMatch": [
                "*/metadata/logicDefs/*.json"
            ],
            "schema": {
                "type": "object"
            }
        },
        {
            "fileMatch": [
                "*/metadata/notificationDefs/*.json"
            ],
            "schema": {
                "type": "object"
            }
        },
        {
            "fileMatch": [
                "*/metadata/pdfDefs/*.json"
            ],
            "schema": {
                "type": "object"
            }
        },
        {
            "fileMatch": [
                "*/metadata/recordDefs/*.json"
            ],
            "schema": {
                "type": "object"
            }
        },
        {
            "fileMatch": [
                "*/metadata/scopes/*.json"
            ],
            "schema": {
                "type": "object",
                "properties": {
                    "entity": {
                        "type": "boolean"
                    },
                    "layouts": {
                        "type": "boolean"
                    },
                    "tab": {
                        "type": "boolean"
                    },
                    "acl": {
                        "type": "boolean"
                    },
                    "customizable": {
                        "type": "boolean"
                    },
                    "importable": {
                        "type": "boolean"
                    },
                    "stream": {
                        "type": "boolean"
                    },
                    "disabled": {
                        "type": "boolean"
                    },
                    "type": {
                        "type": "string"
                    },
                    "module": {
                        "type": "string"
                    },
                    "object": {
                        "type": "boolean"
                    },
                    "isCustom": {
                        "type": "boolean"
                    }
                }
            }
        },
        {
            "fileMatch": [
                "*/metadata/selectDefs/*.json"
            ],
            "schema": {
                "type": "object"
            }
        },
        {
            "fileMatch": [
                "*/metadata/streamDefs/*.json"
            ],
            "schema": {
                "type": "object"
            }
        }
    ],
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "data/cache": true,
        "data/upload": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "data/cache": true,
        "data/upload": true
    }
}
