{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://www.TPDCRM.com/schema/metadata/app/file.json",
    "title": "app/file",
    "description": "Definitions for file attachments.",
    "type": "object",
    "properties": {
        "extensionMimeTypeMap": {
            "type": "object",
            "description": "Mime types associated with file extensions.",
            "additionalProperties": {
                "type": "array",
                "description": "A file extension.",
                "items": {
                    "type": "string",
                    "pattern": "^[-\\w.]+/[-\\w.+]+$"
                }
            }
        },
        "inlineMimeTypeList": {
            "type": "array",
            "description": "Mime types that can be downloaded as inline attachments.",
            "items": {
                "anyOf": [
                    {"const": "__APPEND__"},
                    {
                        "type": "string",
                        "pattern": "^[-\\w.]+/[-\\w.+]+$"
                    }
                ]
            }
        }
    }
}
