{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "maxLength": 255,
            "trim": true,
            "audited": true,
            "index": true
        },
        "number": {
            "type": "autoincrement",
            "autoincrement": true,
            "unique": true,
            "index": true,
            "readOnly": true,
            "prefix": "TKT-",
            "padLength": 6
        },
        "status": {
            "type": "enum",
            "options": [
                "New",
                "Assigned",
                "In Progress",
                "On Hold",
                "Waiting for Customer",
                "Resolved",
                "Closed",
                "Reopened",
                "Cancelled"
            ],
            "default": "New",
            "style": {
                "New": "primary",
                "Assigned": "info",
                "In Progress": "warning",
                "On Hold": "default",
                "Waiting for Customer": "default",
                "Resolved": "success",
                "Closed": "default",
                "Reopened": "danger",
                "Cancelled": "danger"
            },
            "audited": true,
            "required": true
        },
        "priority": {
            "type": "enum",
            "options": [
                "Low",
                "Normal",
                "High",
                "Urgent",
                "Critical"
            ],
            "default": "Normal",
            "style": {
                "Low": "default",
                "Normal": "info",
                "High": "warning",
                "Urgent": "danger",
                "Critical": "danger"
            },
            "audited": true,
            "required": true
        },
        "type": {
            "type": "enum",
            "options": [
                "Question",
                "Incident",
                "Problem",
                "Service Request",
                "Feature Request",
                "Bug Report",
                "Complaint"
            ],
            "default": "Incident",
            "audited": true,
            "required": true
        },
        "category": {
            "type": "enum",
            "options": [
                "Technical Support",
                "Billing",
                "Sales Inquiry",
                "Product Issue",
                "Account Management",
                "General Inquiry",
                "Other"
            ],
            "audited": true,
            "required": true
        },
        "subCategory": {
            "type": "varchar",
            "maxLength": 100
        },
        "description": {
            "type": "text",
            "rows": 10,
            "required": false
        },
        "resolution": {
            "type": "text",
            "rows": 8
        },
        "dueDate": {
            "type": "datetime",
            "audited": true
        },
        "responseTime": {
            "type": "int",
            "min": 0,
            "readOnly": true,
            "tooltip": "Response time in minutes"
        },
        "resolutionTime": {
            "type": "int",
            "min": 0,
            "readOnly": true,
            "tooltip": "Resolution time in minutes"
        },
        "firstResponseAt": {
            "type": "datetime",
            "readOnly": true
        },
        "resolvedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "closedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "reopenCount": {
            "type": "int",
            "default": 0,
            "readOnly": true
        },
        "satisfactionRating": {
            "type": "enum",
            "options": [
                "Very Satisfied",
                "Satisfied",
                "Neutral",
                "Dissatisfied",
                "Very Dissatisfied"
            ],
            "style": {
                "Very Satisfied": "success",
                "Satisfied": "info",
                "Neutral": "default",
                "Dissatisfied": "warning",
                "Very Dissatisfied": "danger"
            }
        },
        "customerFeedback": {
            "type": "text",
            "rows": 4
        },
        "isEscalated": {
            "type": "bool",
            "default": false,
            "audited": true
        },
        "escalatedTo": {
            "type": "link"
        },
        "source": {
            "type": "enum",
            "options": [
                "Email",
                "Phone",
                "Web Form",
                "Chat",
                "Portal",
                "Social Media",
                "Walk-in"
            ],
            "default": "Email"
        },
        "account": {
            "type": "link",
            "audited": true
        },
        "contact": {
            "type": "link",
            "audited": true
        },
        "lead": {
            "type": "link"
        },
        "parentTicket": {
            "type": "link"
        },
        "inboundEmail": {
            "type": "link",
            "readOnly": true
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "audited": true
        },
        "teams": {
            "type": "linkMultiple"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true
        }
    },
    "links": {
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "EntityTeam"
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "account": {
            "type": "belongsTo",
            "entity": "Account",
            "foreign": "tickets"
        },
        "contact": {
            "type": "belongsTo",
            "entity": "Contact",
            "foreign": "tickets"
        },
        "lead": {
            "type": "belongsTo",
            "entity": "Lead",
            "foreign": "tickets"
        },
        "parentTicket": {
            "type": "belongsTo",
            "entity": "Ticket",
            "foreign": "childTickets"
        },
        "childTickets": {
            "type": "hasMany",
            "entity": "Ticket",
            "foreign": "parentTicket"
        },
        "escalatedTo": {
            "type": "belongsTo",
            "entity": "User"
        },
        "inboundEmail": {
            "type": "belongsTo",
            "entity": "InboundEmail"
        },
        "meetings": {
            "type": "hasMany",
            "entity": "Meeting",
            "foreign": "parent"
        },
        "calls": {
            "type": "hasMany",
            "entity": "Call",
            "foreign": "parent"
        },
        "tasks": {
            "type": "hasChildren",
            "entity": "Task",
            "foreign": "parent"
        },
        "emails": {
            "type": "hasChildren",
            "entity": "Email",
            "foreign": "parent"
        },
        "documents": {
            "type": "hasMany",
            "entity": "Document",
            "foreign": "tickets"
        },
        "knowledgeBaseArticles": {
            "type": "hasMany",
            "entity": "KnowledgeBaseArticle",
            "foreign": "tickets"
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc",
        "textFilterFields": ["name", "number", "description"]
    }
}
