{
    "fields": {
        "name": {"type": "varchar", "required": true},
        "number": {"type": "varchar"},
        "status": {
            "type": "enum", 
            "options": ["Draft", "Sent", "Accepted", "Rejected"],
            "default": "Draft"
        },
        "account": {"type": "link", "required": true},
        "contact": {"type": "link"},
        "amount": {"type": "currency", "required": true},
        "taxAmount": {"type": "currency"},
        "discountAmount": {"type": "currency"},
        "grandTotal": {"type": "currency"},
        "quoteDate": {"type": "date", "required": true},
        "expirationDate": {"type": "date"},
        "description": {"type": "text"},
        "assignedUser": {"type": "link"}
    },
    "links": {
        "account": {
            "type": "belongsTo", 
            "entity": "Account",
            "foreign": "quotes"
        },
        "contact": {
            "type": "belongsTo",
            "entity": "Contact"
        },
        "assignedUser": {
            "type": "belongsTo", 
            "entity": "User"
        }
    }
}