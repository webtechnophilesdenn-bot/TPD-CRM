{
    "fields": {
        "name": {"type": "varchar", "required": true},
        "number": {"type": "varchar"},
        "status": {
            "type": "enum", 
            "options": ["Pending", "Completed", "Failed"],
            "default": "Pending"
        },
        "account": {"type": "link", "required": true},
        "invoice": {"type": "link"},
        "amount": {"type": "currency", "required": true},
        "paymentDate": {"type": "date", "required": true},
        "paymentMethod": {
            "type": "enum",
            "options": ["Cash", "Check", "Credit Card", "Bank Transfer", "PayPal", "Other"]
        },
        "reference": {"type": "varchar"},
        "description": {"type": "text"},
        "assignedUser": {"type": "link"}
    },
    "links": {
        "account": {
            "type": "belongsTo", 
            "entity": "Account",
            "foreign": "payments"
        },
        "invoice": {
            "type": "belongsTo",
            "entity": "Invoice",
            "foreign": "payments"
        },
        "assignedUser": {
            "type": "belongsTo", 
            "entity": "User"
        }
    }
}