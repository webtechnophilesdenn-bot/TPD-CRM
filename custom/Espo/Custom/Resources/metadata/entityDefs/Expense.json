
{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "trim": true
        },
        "number": {
            "type": "varchar",
            "readOnly": true,
            "view": "views/fields/varchar"
        },
        "status": {
            "type": "enum",
            "options": ["Draft", "Submitted", "Approved", "Rejected", "Paid"],
            "default": "Draft",
            "style": {
                "Draft": "default",
                "Submitted": "warning",
                "Approved": "success",
                "Rejected": "danger",
                "Paid": "primary"
            },
            "audited": true
        },
        "category": {
            "type": "enum",
            "required": true,
            "options": [
                "Travel",
                "Meals",
                "Office Supplies",
                "Marketing",
                "Utilities",
                "Software",
                "Training",
                "Entertainment",
                "Other"
            ],
            "default": "Other",
            "audited": true
        },
        "amount": {
            "type": "currency",
            "required": true,
            "min": 0,
            "audited": true
        },
        "expenseDate": {
            "type": "date",
            "required": true,
            "default": "javascript: return this.dateTime.getToday();"
        },
        "isBillable": {
            "type": "bool",
            "default": false
        },
        "isReimbursable": {
            "type": "bool",
            "default": false
        },
        "description": {
            "type": "text"
        },
        "notes": {
            "type": "text"
        },
        "assignedUser": {
            "type": "link",
            "required": true
        },
        "account": {
            "type": "link"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true
        }
    },
    "links": {
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "account": {
            "type": "belongsTo",
            "entity": "Account"
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        }
    },
    "collection": {
        "sortBy": "createdAt",
        "asc": false
    }
}