{
    "fields": {
        "name": {"type": "varchar", "required": true},
        "number": {"type": "varchar"},
        "status": {
            "type": "enum", 
            "options": ["Draft", "Sent", "Paid", "Partially Paid", "Overdue", "Cancelled"],
            "default": "Draft"
        },
        "account": {"type": "link", "required": true},
        "contact": {"type": "link"},
        "amount": {"type": "currency", "required": true},
        "taxAmount": {"type": "currency"},
        "discountAmount": {"type": "currency"},
        "paidAmount": {"type": "currency"},
        "invoiceDate": {"type": "date", "required": true},
        "dueDate": {"type": "date"},
        "billingAddress": {"type": "address"},
        "shippingAddress": {"type": "address"},
        "description": {"type": "text"},
        "termsAndConditions": {"type": "text"},
        "notes": {"type": "text"},
        "assignedUser": {"type": "link"}
    },
    "links": {
        "account": {
            "type": "belongsTo", 
            "entity": "Account",
            "foreign": "invoices"
        },
        "contact": {
            "type": "belongsTo",
            "entity": "Contact"
        },
        "assignedUser": {
            "type": "belongsTo", 
            "entity": "User"
        }
    }
}