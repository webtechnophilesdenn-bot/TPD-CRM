{
    "controller": "controllers/record",
    "iconClass": "fas fa-ticket-alt",
    "color": "#3498db",
    "kanbanViewMode": true,
    "sidePanels": {
        "detail": [
            {
                "name": "info",
                "label": "Ticket Info",
                "view": "custom:views/ticket/panels/info",
                "notRefreshable": false,
                "isForm": false,
                "options": {
                    "style": "default"
                }
            }
        ]
    },
    "dynamicLogic": {
        "fields": {
            "resolution": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "or",
                            "value": [
                                {
                                    "type": "equals",
                                    "attribute": "status",
                                    "value": "Resolved"
                                },
                                {
                                    "type": "equals",
                                    "attribute": "status",
                                    "value": "Closed"
                                }
                            ]
                        }
                    ]
                }
            },
            "satisfactionRating": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "status",
                            "value": "Closed"
                        }
                    ]
                }
            },
            "customerFeedback": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "status",
                            "value": "Closed"
                        }
                    ]
                }
            },
            "escalatedTo": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "isEscalated",
                            "value": true
                        }
                    ]
                }
            }
        }
    },
    "filterList": [
        "all",
        {
            "name": "open",
            "label": "Open Tickets"
        },
        {
            "name": "myOpen",
            "label": "My Open Tickets"
        },
        {
            "name": "new",
            "label": "New Tickets"
        },
        {
            "name": "urgent",
            "label": "Urgent Tickets"
        },
        {
            "name": "escalated",
            "label": "Escalated"
        },
        {
            "name": "overdue",
            "label": "Overdue"
        },
        {
            "name": "unassigned",
            "label": "Unassigned"
        },
        {
            "name": "pendingCustomer",
            "label": "Pending Customer"
        },
        {
            "name": "closed",
            "label": "Closed"
        }
    ],
    "boolFilterList": [
        "onlyMy"
    ],
    "selectDefaultFilters": {
        "filter": "open"
    },
    "relationshipPanels": {
        "documents": {
            "create": true,
            "select": true
        },
        "childTickets": {
            "create": true,
            "select": true,
            "label": "Related Tickets"
        }
    }
}
